{
  "name": "bauflex-management",
  "private": true,
  "version": "1.0.0",
  "type": "module",

  "main": "electron/main.cjs",

  "scripts": {
    
    "dev": "vite",

    "dev:server": "tsx watch server.ts",
    "dev:all": "concurrently \"npm run dev:server\" \"npm run dev\"",

    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push",

    "build": "npm run prisma:generate && npm run build:client && npm run build:server",
    "build:client": "vite build",
    "build:server": "tsup server.ts --format esm --out-dir dist --no-splitting",

    "start": "node dist/server.js",
    "lint": "eslint .",

    "electron:dev": "concurrently \"vite\" \"wait-on tcp:5173 && electron .\"",
    "electron:build": "npm run build:client && electron-builder"
  },

  "build": {
    "appId": "com.bauflex.app",
    "productName": "BAUFLEX Desktop",

    "directories": {
      "output": "release"
    },

    "files": [
      "dist/**/*",         
      "electron/**/*",      
      "!**/*.ts",         
      "!server.ts",         
      "!prisma/**/*",       
      "!node_modules/.prisma/**/*"
    ],

    "asar": true,

    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    }
  },

  "dependencies": {
    "@hookform/resolvers": "^3.9.0",
    "@prisma/client": "^5.22.0",
    "@tanstack/react-query": "^5.60.0",
    "axios": "^1.7.0",
    "bcryptjs": "^2.4.3",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "date-fns": "^3.6.0",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "framer-motion": "^10.18.0",
    "jsonwebtoken": "^9.0.2",
    "jspdf": "^2.5.2",
    "jspdf-autotable": "^3.8.3",
    "lucide-react": "^0.563.0",
    "pdfmake": "^0.3.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.53.0",
    "react-router-dom": "^6.26.0",
    "tailwind-merge": "^2.5.0",
    "xlsx": "^0.18.5",
    "zod": "^3.23.0",
    "zustand": "^5.0.0"
  },

  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.0.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.0.0",
    "electron": "^40.1.0",
    "electron-builder": "^26.7.0",
    "eslint": "^9.0.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.0",
    "globals": "^15.0.0",
    "postcss": "^8.4.40",
    "prisma": "^5.22.0",
    "tailwindcss": "^3.4.10",
    "tsup": "^8.3.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0",
    "typescript-eslint": "^8.0.0",
    "vite": "^5.4.0",
    "wait-on": "^9.0.3"
  }
}
