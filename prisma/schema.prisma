generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  login     String   @unique
  password  String
  name      String
  role      Role     @default(USER)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("User")
}

model Employee {
  id              Int       @id @default(autoincrement())
  name            String
  position        String?
  email           String?
  phone           String?
  department      String?
  
  // Поля для размеров (используются как дефолтные)
  clothingSize    String?   @map("clothing_size")
  shoeSize        String?   @map("shoe_size")
  height          String?
  
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")
  Request         Request[]

  @@map("Employee")
}

model Request {
  id              Int       @id @default(autoincrement())
  requestNumber   String    @unique @map("request_number")
  
  // Связь с сотрудником (опциональная)
  employee        Employee? @relation(fields: [employeeId], references: [id])
  employeeId      Int?      @map("employee_id")
  
  // Имя сотрудника если не из базы
  employeeName    String?   @map("employee_name")
  
  // Основные поля заявки
  itemName        String    @map("item_name")
  quantity        Int
  unit            String
  urgency         String
  purpose         String?
  notes           String?
  status          String    @default("pending")
  
  // ✨ НОВОЕ: JSON поле для хранения структурированных деталей
  // Для СИЗ: { height, clothingSize, clothingSeason, shoeSize, shoeSeason }
  // Для инструментов/оборудования: массив { name, qty }
  detailsJson     Json?     @map("details_json")
  
  // Тип заявки (для упрощения фильтрации)
  requestType     String?   @map("request_type") // 'siz', 'tools', 'equipment', 'consumables'
  
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")

  @@map("Request")
}

enum Role {
  USER
  ADMIN
}
